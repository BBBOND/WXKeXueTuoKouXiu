.container .nav {
    height: 88rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding-top: 44rpx;
    background: #3e5062;
    color: white;
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    z-index: 9999;
}

.container .header {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    height: 227rpx;
}

.header .header-img {
    width: 100%;
    height: 100%;
}

.header .header-count {
    position: absolute;
    top: 0;
    right: 0;
    color: white;
    font-size: 24rpx;
    line-height: 24rpx;
    margin-top: 15rpx;
    margin-right: 15rpx;
    background-color: rgba(0,0,0,0.1);
    border-radius: 8rpx;
    padding: 8rpx 8rpx 4rpx 8rpx;
}

.container .refresh {
    margin-bottom: 10rpx;
    height: 44rpx;
    margin-top: 183rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    font-size: 24rpx;
}

.container .programmes {
    padding: 0 8rpx;
}

.programmes .programme-item {
    width: 100%;
    padding: 8rpx 0;
    background-color: white;
    margin-bottom: 10rpx;
    border-radius: 16rpx;
}

.programme-item .programme-header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1rpx solid #D5D7DD;
    padding: 10rpx 0;
}

.programme-header .title {
    margin-left: 10rpx;
    max-width: 550rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
}

.title .icon {
    width: 36rpx;
    height: 36rpx;
    margin: 0;
}

.title .title-text {
    font-size: 36rpx;
    flex: 1;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    font-weight: bold;
}

.programme-header .categories {
    margin-right: 10rpx;
    width: max-content;
    font-size: 28rpx;
    background-color: #586c94;
    color: white;
    padding: 4rpx 8rpx;
    border-radius: 8rpx;
}

.programme-item .programme-content {
    padding: 6rpx 10rpx;
    font-size: 28rpx;
    color: #69696B;
}

.weui-loadmore__tips_in-line {
    background-color: #f2f2f2;
}

.container .loading {
    color: #999;
}