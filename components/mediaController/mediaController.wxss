.controller {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 128rpx;
    display: flex;
    background: #3e5062;
    /*padding: 10rpx 20rpx;*/
}

.controller .controller-des {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    margin-left: 20rpx;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    flex: 1;
}

.controller-des .controller-title {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    color: white;
    font-size: 32rpx;
}

.controller-des .controller-duration {
    font-size: 24rpx;
    color: #d8d8d8;
    margin-top: 6rpx;
}

.controller .controller-option {
    width: 128rpx;
    height: 128rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.controller-option image {
    width: 52rpx;
    height: 52rpx;
    padding: 0;
    margin: 0;
}